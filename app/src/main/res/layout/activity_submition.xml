<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="get Coordinates"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lng" />
    <TextView
        android:id="@+id/lng"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Person Contacted"
        android:id="@+id/textView3"
        android:layout_below="@+id/refresh"
        android:layout_toRightOf="@+id/lat"
        android:layout_toEndOf="@+id/lat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Residential Status"
        android:id="@+id/textView4"
        android:layout_below="@+id/persontactedet"
        android:layout_toRightOf="@+id/lat"
        android:layout_toEndOf="@+id/lat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Marital Status"
        android:id="@+id/textView5"
        android:layout_below="@+id/resstatusspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No. of family member"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Working Family Members"
        android:id="@+id/textView7"
        android:layout_below="@+id/nofmet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/persontactedet"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resstatusspinner"
        android:layout_below="@+id/persontactedet"
        android:layout_alignLeft="@+id/persontactedet"
        android:layout_alignStart="@+id/persontactedet" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/resstatusspinner"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_above="@+id/textView6"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no"
            android:id="@+id/nobtn"
            android:checked="false"
            android:layout_gravity="right" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="yes"
            android:id="@+id/yesbtn"
            android:layout_gravity="center" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/nofmet"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/nowfmet"
        android:layout_alignStart="@+id/nowfmet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/nowfmet"
        android:layout_below="@+id/nofmet"
        android:layout_alignLeft="@+id/refresh"
        android:layout_alignStart="@+id/refresh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dependent Members"
        android:id="@+id/textView39"
        android:layout_below="@+id/nowfmet"
        android:layout_toRightOf="@+id/lat"
        android:layout_toEndOf="@+id/lat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Children"
        android:id="@+id/textView40"
        android:layout_below="@+id/nodfmet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pensioners"
        android:id="@+id/textView41"
        android:layout_below="@+id/childrenet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/nodfmet"
        android:layout_below="@+id/nowfmet"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignLeft="@+id/nowfmet"
        android:layout_alignStart="@+id/nowfmet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/childrenet"
        android:layout_below="@+id/nodfmet"
        android:layout_toEndOf="@+id/textView7"
        android:layout_alignLeft="@+id/nodfmet"
        android:layout_alignStart="@+id/nodfmet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/pensioneret"
        android:layout_below="@+id/childrenet"
        android:layout_alignLeft="@+id/childrenet"
        android:layout_alignStart="@+id/childrenet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Employment Details of Spouse"
        android:id="@+id/textView42"
        android:layout_below="@+id/pensioneret"
        android:layout_toRightOf="@+id/lat"
        android:layout_toEndOf="@+id/lat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/empspouseet"
        android:layout_below="@+id/pensioneret"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Locality"
        android:id="@+id/textView43"
        android:layout_below="@+id/empspouseet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/localityspinner"
        android:layout_below="@+id/empspouseet"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vehicle"
        android:id="@+id/textView44"
        android:layout_below="@+id/localityspinner"
        android:layout_toRightOf="@+id/lat"
        android:layout_toEndOf="@+id/lat" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vehiclespinner"
        android:layout_alignTop="@+id/textView44"
        android:layout_alignLeft="@+id/localityspinner"
        android:layout_alignStart="@+id/localityspinner" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:id="@+id/nxtbtn"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

    </RelativeLayout>
</ScrollView>

</RelativeLayout>